{
  "manifest_version": 2,
  "name": "Shanbay Task",
  "description": "Shanbay front-end task",
  "version": "1.0",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.theguardian.com/*/*"
      ],
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab"
  ]
}